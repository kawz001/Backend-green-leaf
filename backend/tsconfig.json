{
    "compilerOptions": {
      "target": "ES2020",                            // Define a versão de JavaScript alvo
      "module": "CommonJS",                          // Usa o sistema de módulos CommonJS, padrão no Node.js
      "strict": true,                                // Ativa verificações estritas de tipo
      "esModuleInterop": true,                       // Suporte para módulos ES
      "skipLibCheck": true,                          // Ignora checagem de arquivos de tipagem de bibliotecas
      "forceConsistentCasingInFileNames": true,      // Força case consistente nos nomes de arquivos
      "moduleResolution": "node",                    // Resolve módulos da maneira como o Node.js faz
      "outDir": "./dist",                            // Especifica a pasta de saída dos arquivos compilados
      "rootDir": "./src",                            // Define o diretório raiz dos arquivos TypeScript
      "noImplicitAny": true,                         // Evita o uso implícito do tipo "any"
      "resolveJsonModule": true,                     // Permite a importação de arquivos JSON
      "baseUrl": ".",                                // Base para resolução de módulos relativos
      "paths": {                                     // Alias para paths, se necessário
        "@/*": ["src/*"]
      }
    },                           // Inclui todos os arquivos TypeScript no diretório 'src'//-
"include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]              // Exclui a pasta 'node_modules' e 'dist' do processo de compilação
  }